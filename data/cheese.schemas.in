<gconfschemafile>
	<schemalist>
		<schema>
			<key>/schemas/apps/cheese/countdown</key>
			<applyto>/apps/cheese/countdown</applyto>
			<owner>cheese</owner>
			<type>bool</type>
			<default>0</default>
			<locale name="C">
				<short>Use a countdown</short>
				<long>Whether a countdown should be used, when taking a photo</long>
			</locale>
    		</schema>

		<schema>
			<key>/schemas/apps/cheese/webcam</key>
			<applyto>/apps/cheese/webcam</applyto>
			<owner>cheese</owner>
			<type>string</type>
			<default>CHECK_PATTERN</default>
			<locale name="C">
				<short>Webcam device string indicator</short>
				<long>The device-string, which points to the webcam, e.g. /dev/video0</long>
			</locale>
		</schema>

		<schema>
			<key>/schemas/apps/cheese/selected_effects</key>
			<applyto>/apps/cheese/selected_effects</applyto>
			<owner>cheese</owner>
			<type>list</type>
			<list_type>string</list_type>
			<default>[]</default>
			<locale name="C">
				<short>Selected Effects</short>
				<long>Effects, that are applied on startup. Possible values are: Mauve,
				Noir/Blanc, Saturation, Hulk, Vertical Flip, Horizontal Flip,
				Shagadelic, Vertigo, Edge, Dice and Warp</long>
			</locale>
		</schema>

	</schemalist>
</gconfschemafile>
